<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		xmlns:local="clr-namespace:Transpo.Mobile;assembly=Transpo.Mobile"
		Title="Детали за превоз"
		x:Class="Transpo.Mobile.RideDetailsPage">
	<ContentPage.Content>
		<StackLayout>
			<BoxView Color="Gray" HeightRequest="1"></BoxView>
			<Label Text="{Binding StartPoint.Name}" HorizontalTextAlignment="Center" FontSize="16" FontAttributes="Bold" />
			<Label Text="до" HorizontalTextAlignment="Center" FontSize="16" />
			<Label Text="{Binding EndPoint.Name}" HorizontalTextAlignment="Center" FontSize="16" FontAttributes="Bold" />
			<BoxView Color="Gray" HeightRequest="1"></BoxView>
        	<TableView>
                <TableView.Root>
                    <TableSection Title="">
                        <TextCell Text="{Binding DepartureDateText}"></TextCell>
                        <TextCell Text="{Binding SeatsLeftText}"></TextCell>
                        <TextCell Text="{Binding PricePerPassengerText}"></TextCell>
                        <TextCell Text="{Binding Driver.NameText}"></TextCell>
                        <TextCell Text="{Binding Driver.EmailText}"></TextCell>
                        <TextCell Text="{Binding Driver.PhoneText}"></TextCell>
                    </TableSection>
                </TableView.Root>
            </TableView>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
