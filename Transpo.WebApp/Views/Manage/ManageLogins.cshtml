@model Transpo.WebApp.Models.ManageLoginsViewModel
@using Microsoft.Owin.Security
@{
    Layout = null;
}

<div class="ui container">

    <h4 class="ui dividing header">Екстерни најави</h4>

    @{
        var loginProviders = Context.GetOwinContext().Authentication.GetExternalAuthenticationTypes();
        if (loginProviders.Count() == 0)
        {
            <div>
                <p>
                    Нема сетирано екстерни најавувања.
                </p>
            </div>
        }
        else
        {
            if (Model.CurrentLogins.Count > 0)
            {
                <table class="ui very basic collapsing celled table">
                    <thead>
                        <tr>
                            <th>Провајдер</th>
                            <th>Опции</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var account in Model.CurrentLogins)
                    {
                            <tr>
                                <td>@account.LoginProvider</td>
                                <td>
                                    @if (ViewBag.ShowRemoveButton)
                                    {
                                        using (Html.BeginForm("RemoveLogin", "Manage"))
                                        {
                                            @Html.AntiForgeryToken()
                                            <div>
                                                @Html.Hidden("loginProvider", account.LoginProvider)
                                                @Html.Hidden("providerKey", account.ProviderKey)
                                                <input type="submit" class="ui red button" value="Избриши" title="Избриши го @account.LoginProvider логинот од својата сметка" />
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        @: &nbsp;
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            if (Model.OtherLogins.Count > 0)
            {
                using (Html.BeginForm("LinkLogin", "Manage"))
                {
                    @Html.AntiForgeryToken()
                    <div id="socialLoginList">
                        <p>
                            @foreach (AuthenticationDescription p in Model.OtherLogins)
                            {
                                <button type="submit" class="ui button @p.AuthenticationType.ToString().ToLower()" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Логирај се со твојо @p.Caption account"><i class="square icon @p.AuthenticationType.ToString().ToLower()"></i> @p.AuthenticationType</button>
                            }
                        </p>
                    </div>
                }
            }
        }
    }
</div>