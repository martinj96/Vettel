@using Transpo.WebApp.Models
@model IEnumerable<RideModel>

<div class="ui divided items">
    @foreach (var ride in Model)
    {
        <div class="ui item">
            @*@Html.HiddenFor(x => ride.RideId)*@
            <div class="content">
                <div class="ui grid" style="position:relative;">
                    <div class="five wide column">
                        <div class="ui card">
                            <div class="content">
                                <img class="left floated tiny circular ui image" src="@ride.Driver.PictureUrl">
                                <div class="ui medium header">
                                    @if (ride.Driver.Name.Split(' ').Count() > 1)
                                    {
                                        <span>@ride.Driver.Name.Split(' ')[0] @ride.Driver.Name.Split(' ')[1].ToString()[0].</span>
                                    }
                                    else if (ride.Driver.Name.Contains(@"@"))
                                    {
                                        <span>@ride.Driver.Name.Split('@')[0].ToString()</span>
                                    }
                                    else
                                    {
                                        <span>@ride.Driver.Name</span>
                                    }
                                </div>
                                <div class="meta">
                                    @ride.Driver.Gender
                                </div>
                                @*<div class="description">
                                <div class="ui star rating" data-rating="2" data-max-rating="5"></div>
                            </div>*@
                            </div>
                        </div>
                    </div>
                    <div class="ui vertical divider"></div>
                    <div class="eleven wide column">
                        <a class="header" href='@Url.Action("Details", "Rides", new { @id = @ride.RideId })'>@ride.StartPoint.Name - @ride.EndPoint.Name</a>
                        <div class="meta">
                            @if (ride.PricePerPassenger.HasValue)
                            {
                                <span>@ride.PricePerPassenger MKD</span>
                            }
                        </div>
                        <div class="description">
                            @if (ride.SeatsLeft.HasValue)
                            {
                                <p>@ride.SeatsLeft seats.</p>
                            }
                        </div>
                        <div class="extra">
                            Departure: @ride.DepartureDate
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script>
    $('.rating').rating();
</script>